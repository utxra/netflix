{% extends 'base.html.twig' %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset('css/login.css') }}" />
{% endblock %} 

{% block title %}Reset your password{% endblock %} 

{% block body %} 

    {% block header %} 
    {% endblock %}

<div
	class="d-flex flex-column justify-content-center align-items-center"
	style="width: 100vw; height: 100vh">
	<img src="{{ asset('images/logo/logo.png') }}" alt="logo" class="logo mb-4" />
	<section class="login-box">
		<h2 class="text-white">Reestablece tu contraseña</h2>
		{{ form_start(requestForm) }}

		{% for flash_error in app.flashes('reset_password_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
		{% endfor %}
		<div>
			<small class="text-white">
				Enter your email address, and we will send you a link to reset your
				password.
			</small>
		</div>

		<div class="mb-3 bg-white rounded px-2">
			{# <label class="form-label small-text" for="username">Email</label>
			<input
				type="email"
				value="{{ last_username }}"
				name="_username"
				id="username"
				class="form-control border-0 p-0"
				autocomplete="email"
				required
				autofocus
			/>
			#}
            {{ form_label(requestForm.email, 'Email', { 'label_attr': {'class': 'form_label small_text'}}) }}
            {{ form_widget(requestForm.email, { 'attr': {'class': 'form-control border-0 p-0'}}) }}
		</div>

		<button
			type="submit"
			class="btn btn-danger btn-primary mt-3"
			style="width: 100%"
		>
			Enviar correo
		</button>

		<div class="text-center mt-3">
			<a href="{{ path('app_register') }}" class="text-white small-text"
				>¿No tienes cuenta? Regístrate</a
			>
		</div>
		{{ form_end(requestForm) }}
	</section>
</div>

{% endblock %}
